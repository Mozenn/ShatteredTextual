<Window x:Class="ShatteredTextualEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShatteredTextualEditor"
		xmlns:vm="clr-namespace:ShatteredTextualEditor.ViewModel"
		xmlns:cv="clr-namespace:ShatteredTextualEditor.ViewModel.Converters"
        mc:Ignorable="d"
        Title="STEditor" Height="Auto" Width="Auto">

	<Window.Resources>
		<cv:BooleanToVisibilityConverter x:Key="BoolToVis" True="Collapsed" False="Visible"/>
	</Window.Resources>

	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
			</MenuItem>
			<MenuItem Header="Settings">
				
			</MenuItem>
		</Menu>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="5" />
				<ColumnDefinition Width="2*" />
				<ColumnDefinition Width="5" />
				<ColumnDefinition Width="2*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			<TreeView Grid.RowSpan="2">
				
			</TreeView>
			<GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
			<GroupBox DockPanel.Dock="Left" Margin="10" Grid.Column="2">
				<GroupBox.Header>
					<TextBlock Text="Level" FontWeight="Bold"/>
				</GroupBox.Header>
				<StackPanel>
					<Label Content="Name :"/>
					<TextBox />
					<Label Content="Description :" Margin="0,10,0,0"/>
					<TextBox />
				</StackPanel>
			</GroupBox>
			<GroupBox DockPanel.Dock="Left" Margin="10" Grid.Column="2" Grid.Row="1">
				<GroupBox.Header>
					<TextBlock Text="Choice" FontWeight="Bold"/>
				</GroupBox.Header>
				<StackPanel>
					<Label Content="Description :"/>
					<TextBox />
				</StackPanel>
			</GroupBox>
			<GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" />
			<GroupBox DockPanel.Dock="Left" Margin="10" Grid.Column="4">
				<GroupBox.Header>
					<TextBlock Text="Link" FontWeight="Bold"/>
				</GroupBox.Header>
				<StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label Content="Next Level :"/>
						<TextBox MinWidth="100"/>
					</StackPanel>
					<ComboBox>
						<!--TODO : Databinding ?-->
					</ComboBox>
				</StackPanel>
			</GroupBox>
			<Expander x:Name="GameSettings" DockPanel.Dock="Right" ExpandDirection="Left" VerticalAlignment="Center" Grid.Column="4" Grid.RowSpan="2" HorizontalAlignment="Right"
					  DataContext="{StaticResource gsVm}">
				<Expander.Resources>
					<vm:GameSettingsVM x:Key="gsVm"/>
				</Expander.Resources>
				<Expander.Header>
					<TextBlock Text="GameSettings" Visibility="{Binding ElementName=GameSettings, Path=IsExpanded, Converter={StaticResource BoolToVis}}"/>
				</Expander.Header>
				<StackPanel Background="{StaticResource TransparentWhite}">
					<StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
						<Label Content="Game Title:" Margin="5"/>
						<TextBox MinWidth="100" Margin="5"/>
					</StackPanel>
					<ScrollViewer>
						<ListBox ItemsSource="{Binding ProgressionEvents}" SelectedItem="">
							
						</ListBox>
					</ScrollViewer>
				</StackPanel>
			</Expander>
		</Grid>
	</DockPanel>
</Window>
