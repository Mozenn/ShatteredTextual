<Window x:Class="ShatteredTextualEditor.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShatteredTextualEditor.View"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="400">
    
	<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
		<Label Content="Destination Data Folder :" VerticalAlignment="Center"/>
		<Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
			<TextBlock Text="To bind to path property" VerticalAlignment="Center"/>
		</Border>
		<Button VerticalAlignment="Center" MinWidth="20" Content="..." Margin="10,0,0,0"/>

	</StackPanel>
	
</Window>
